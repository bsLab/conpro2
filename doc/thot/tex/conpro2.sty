\def\baseblock#1#2#3#4#5{
  \vbox{\setbox0=\hbox{#5}
    \offinterlineskip
    \hbox{\copy0
      \dimen0=\ht0
      \advance\dimen0 by -#1
      {\boxcolor\vrule height \dimen0 width#2}}
    \hbox{\hskip#3\dimen0=\wd0
      \advance\dimen0 by -#3
      \advance\dimen0 by #2
      {\boxcolor\vrule height #4 width \dimen0}}
    }
}
\def\loopblock#1#2{
\begingroup
  \dimen2=0.4pt
  \def\doblock{
    \setbox2\baseblock
      {\count1\dimen2}{0.4pt}{\count1\dimen2}{0.4pt}{\box2}}
    \setbox2=\vbox{#1}
    \count1=0
    \loop
      \advance\count1 by 1
      \doblock
      \ifnum\count1<#2
    \repeat
    \box2
\endgroup}

\def\framebox#1#2#3{
  \vbox{{\boxcolor\hrule height #2}
    \hbox{{\boxcolor\vrule width #2}
      \hskip#1
      \vbox{\vskip#1{}
        #3
        \vskip#1}
      \hskip#1
      {\boxcolor\vrule width #2}}
    {\boxcolor\hrule height #2}}
}

